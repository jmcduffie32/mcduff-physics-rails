<%= form_for @problem do |f| %>
  <%= f.label :topic %>
  <%= f.text_field :topic %>

  <%= f.label :problem_text %>
  <%= f.text_area :problem_text %>

  <%= f.nested_fields_for :problem_parts do |ff| %>
    <%= ff.label 'Question Part' %>
    <%= ff.text_area :statement %>

    <%= ff.label 'Answer' %>
    <%= ff.text_field :answer %>
    <%= ff.remove_nested_fields_link %>
  <% end %>
  <%= f.add_nested_fields_link :problem_parts %>
  <%= f.submit %>
<% end %>
